<Window x:Class="cursework.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cursework"
        mc:Ignorable="d"
        Title="AddWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Добавить студента" HorizontalAlignment="Center" Margin="285,16,286,0" VerticalAlignment="Top" Width="215" FontSize="22" FontWeight="Bold"/>
        <TextBox x:Name="textName" HorizontalAlignment="Left" Height="28" Margin="120,70,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="550" FontSize="16"/>
        <TextBox x:Name="textPhone" HorizontalAlignment="Left" Height="28" Margin="120,120,0,0" TextWrapping="Wrap" Text="Телефон" VerticalAlignment="Top" Width="550" FontSize="16"/>
        <TextBox x:Name="textEmail" HorizontalAlignment="Left" Height="28" Margin="120,170,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="550" FontSize="16"/>
        <Button x:Name="add" Content="Добавить" HorizontalAlignment="Left" Margin="120,380,0,0" VerticalAlignment="Top" Width="75" Click="AddStudent"/>

    </Grid>
</Window>
